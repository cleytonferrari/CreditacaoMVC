@model IEnumerable<CreditacaoMVC.Models.Aluno>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Nome
        </th>
        <th>
            Numero
        </th>
        <th>
            Email
        </th>
        <th>
            Curso
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.Nome)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AlunoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.AlunoId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AlunoId })
            </td>
        </tr>
    }
</table>