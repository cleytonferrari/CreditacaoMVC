    ViewBag.Title = "Delete";
}
<h2>
    Excluir curso</h2>
<h3>
    Tem certeza que deseja excluir este curso?</h3>
<fieldset>
    <legend>Curso</legend>
    <div class="display-label">
        Nome</div>
    <div class="display-field">
